<%= link_to 'Write a New Post', new_post_path %>
<% @posts.each do |post| %>
    <br /> <br />
    <h3><%= post.title %></h3>
    <%= post.content %>
    <i> - <%= post.name %></i><br />
    <%= link_to 'Show', post %> |
    <%= link_to 'Edit', edit_post_path(post) %> | 
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    <br /> <br />
<% end %>

